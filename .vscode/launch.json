  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "[MacOS] Debug unit tests",
      "cargo": {
        "args": ["test", "--no-run", "--lib", "--package=polar-bear"],
        "filter": {
          "name": "polar_bear",
          "kind": "lib"
        },
        "env": {
          "RUSTFLAGS": "-L/opt/homebrew/lib"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "[Linux] Debug executable",
      "cargo": {
        "args": ["build", "--bin=polar-bear", "--package=polar-bear"],
        "filter": {
          "name": "polar-bear",
          "kind": "bin"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    }
  ]
}
