{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "[Android] Build",
      "command": "~/.cargo/bin/x",
      "args": ["build", "--platform=android", "--arch=arm64"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "type": "shell",
      "label": "[Android] Logcat",
      "command": "sh",
      "args": ["-c", "adb logcat -c && adb logcat -e app.polarbear"]
    }
  ]
}
