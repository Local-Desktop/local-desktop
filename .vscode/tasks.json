{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "[Android] Build",
      "command": "~/.cargo/bin/x",
      "args": ["build", "--platform=android", "--arch=arm64"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "type": "shell",
      "label": "[Android] Logcat",
      "command": "sh",
      "args": ["-c", "adb logcat -c && adb logcat -s RustStdoutStderr"],
      "isBackground": true,
      "problemMatcher": {
        "owner": "custom",
        "pattern": [
          {
            "regexp": ".",
            "file": 1,
            "location": 2,
            "message": 3
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*",
          "endsPattern": ".*"
        }
      }
    },
    {
      "label": "[Android] Build & Logcat",
      "dependsOn": ["[Android] Build", "[Android] Logcat"],
      "dependsOrder": "parallel"
    }
  ]
}
